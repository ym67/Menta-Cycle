<!-- カレンダー -->
<%= month_calendar events: @diarys do |date, diarys| %>
  <!-- 日付 -->
  <%= link_to date.strftime("%d"), dailry_data_path(para: date) %>
  <br>
  <!-- ストレスダイアリーの投稿数 -->
  <% diary_of_the_day = [] %>
  <% diarys.each do |diary| %>
    <% diary_of_the_day.push(diary) %>
  <% end %>
  <%= link_to "ダイアリー：#{diary_of_the_day.length}件", dailry_data_path(para: date) if diary_of_the_day.length > 0 %>
<% end %>

